extends ./layout.jade

block head
	link(rel="stylesheet", href="css/bootstrap-datepicker.min.css")
	link(rel="stylesheet", href="css/bootstrap-clockpicker.min.css")
	script(src="js/bootstrap-datepicker.min.js")
	script(src="js/bootstrap-clockpicker.min.js")
block content
	.container

		h3(style="color: green;") Weekly schedule:
		table.table.table-bordered
			thead
				tr
					th Class name
					th Class date
					th Class time
					th Weather summary
					th Delete class
			tbody
				- each classSchedules in classes
					tr
						th= classSchedules.className
						th= classSchedules.classDate
						th= classSchedules.classStartTime
						th= classSchedules.classEndTime

		button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#myModal')
			| Enter class schedule
		#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
			.modal-dialog(role='document')
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') Ã—
						h4#myModalLabel.modal-title Enter class schedule
					.modal-body
						form(role="form", action="/updateSchedule", method="post", required)
							div.form-group
								label Class name:
								input.form-control(type="text", placeholder="Enter First Name", name="className", autofocus="", required, pattern="[A-Za-z0-9]*", title="Alphabetic and Numbers characters only, it can not be empty")
							div.form-group
								label Enter weekly date
								.input-group.date
									input.form-control(type='text', name="classDate", required, title="Class date can not be empty")
									span.input-group-addon
										i.glyphicon.glyphicon-th
							div.form-group
								label Start time
								.input-group.clockpicker
									input.form-control(type='text', value='09:30', name="classStartTime", required, title="Class start time can not be empty")
									span.input-group-addon
										span.glyphicon.glyphicon-time
							div.form-group
								label Finish time
								.input-group.clockpicker
									input.form-control(type='text', value='10:30', name="classEndTime", required, title="Class end time can not be empty")
									span.input-group-addon
										span.glyphicon.glyphicon-time
							button.btn.btn-primary(type="submit") Save changes

					.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Close
