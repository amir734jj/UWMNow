extends ./layout.jade

block content
	.container
		h3(style="color: green;") Manage User Accounts:
		table.table.table-bordered
			thead
				tr
					th Firstname
					th Lastname
					th(class="hidden-xs") Email
					th(class="hidden-xs") Active
					th(class="hidden-xs") Admin
					th Action
			tbody
				- each user in users
					tr
						td=	user.firstName
						td=	user.lastName
						td(class="hidden-xs")= user.email
						td(class="hidden-xs")= user.active
						td(class="hidden-xs")= user.admin
						td(class="hidden-xs")
							.dropdown
								button(class="btn btn-primary dropdown-toggle", type="button", data-toggle="dropdown")
									| Action &nbsp
									span(class="caret")
								ul.dropdown-menu
									li
										a(href="administrative/#{user.hashcode}/activate")
											| Activate
									li
										a(href="administrative/#{user.hashcode}/inactivate")
											| Inactivate
									li
										a(href="administrative/#{user.hashcode}/user")
											| Set as user
									li
										a(href="administrative/#{user.hashcode}/administrator")
											| Set as administrator

		hr

		h3(style="color: green;") List of news posted by students (in chronological order):
		- each item in news
			div(class="panel panel-default")
				div(class="panel-panel")
					h5
						- if (item.newsApprove)
							span(class="label label-success") Approved
						- else
							span(class="label label-danger") Unapproved
						|  posted on #{moment(new Date(item.newsDate)).format('MM/DD/YYYY - hh:mm')} by #{item.initial}
						.btn-group.pull-right
							a(class="btn btn-default", href="administrative/postnews/#{item.newsUID}/approvenews")
								| approve
							a(class="btn btn-default", href="administrative/postnews/#{item.newsUID}/unapprovenews")
								| unapprove
							a(class="btn btn-default", href="administrative/postnews/#{item.newsUID}/deletenews")
								| delete											
					p
						| #{item.newsText}
