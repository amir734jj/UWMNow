doctype html
html(lang="en")
	head
		title= "UWM Now!"
		meta(name="viewport", content="width=device-width, initial-scale=1.0")

		link(rel="stylesheet", href="/css/bootstrap.min.css")
		link(rel="stylesheet", href="/css/font-awesome.css")
		link(rel="stylesheet", href="/css/layout.css")
		link(rel="stylesheet", href="/css/select2.min.css")
		link(rel="stylesheet", href="/css/bootstrap-wysihtml5.css")
		link(rel="stylesheet", href="/css/summernote.css")
		link(rel="stylesheet", href="/css/summernote-bs3.css")
		link(rel="stylesheet", href="/css/star-rating.min.css")


		script(src="/js/jquery.min.js")
		script(src="/js/bootstrap.min.js")
		script(src="/js/select2.min.js")
		script(src="/js/summernote.js")
		script(src="/js/jdenticon.min.js")
		script(src="/js/star-rating.min.js")
		script(src="/js/action.js")

		block head
	body
		nav.navbar.navbar-default
			.container-fluid
				.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navigationbar")
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/")
						span.fa.fa-cubes
						| &nbsp UWM Now!
				.collapse.navbar-collapse(id="navigationbar")
					ul.nav.navbar-nav.navbar-left
						- if (user)
							li
								a(href="/about")
									i(class="fa fa-diamond")
									| &nbsp About Us

					ul.nav.navbar-nav.navbar-right
						- if (user && user.admin)
							li
								a(href="/administrative")
									i(class="fa fa-sign-out")
									| &nbsp Administrative
						- if (user)
							li
								a(href="/rate")
									i(class="fa fa-star-half-o")
									| &nbsp Rate Class Difficulty
							li
								a(href="/search")
									i(class="fa fa-search")
									| &nbsp Search User
							li
								a(href="/schedule")
									i(class="fa fa-cog")
									| &nbsp Weekly Schedule
							li
								a(href="/discussion")
									i(class="fa fa-comments")
									| &nbsp Class Discussion
							li
								a(href="/postnews")
									i(class="fa fa-newspaper-o")
									| &nbsp Post / Review News
							li
								a(href="/account")
									i(class="fa fa-cog")
									| &nbsp My Account
							li
								a(href="/logout")
									i(class="fa fa-sign-out")
									| &nbsp Logout
						- else
							li
								a(href="/register")
									i(class="fa fa-pencil-square")
									| &nbsp Sign Up
							li
								a(href="/login")
									i(class="fa fa-sign-in")
									| &nbsp Login

		.container
			.jumbotron
				block content


